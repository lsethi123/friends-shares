<%= simple_form_for(@friend,:html => {:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit ,:class=>"btn-primary"%>
	<%= link_to 'Back', friends_path,:class=>"btn" %>
  </div>
<% end %>
